{
  "name": "@robb_j/chowchow-auth",
  "version": "0.0.0",
  "description": "An authentication module for chowchow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "npx tsc --noEmit",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run build && git add dist",
    "prettier": "prettier --write '**/*.{js,ts,tsx,json,css,md}'",
    "test": "jest",
    "dev": "node -r ts-node/register -r dotenv/config src/experiment.ts"
  },
  "keywords": [
    "chowchow",
    "typescript",
    "authentication",
    "sendgrid",
    "google-oauth"
  ],
  "author": "Rob Anderson (https://r0b.io)",
  "repository": "robb-j/chowchow-auth",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "cookie-parser": "^1.4.3",
    "express-jwt": "^5.3.1",
    "google-auth-library": "^3.0.1",
    "jsonwebtoken": "^8.4.0"
  },
  "peerDependencies": {
    "@robb_j/chowchow": "^0.x.x"
  },
  "devDependencies": {
    "@robb_j/chowchow": "^0.5.1",
    "@robb_j/chowchow-json-envelope": "^0.2.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "0.0.41",
    "@types/jest": "^23.3.12",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.12.18",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
